<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="4"
    tools:context=".MainActivity">
    <Button android:id="@+id/one" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="1"
        android:textSize="80dp" />
    <Button android:id="@+id/two" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="2"
        android:textSize="80dp" />
    <Button android:id="@+id/three" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="3"
        android:textSize="80dp" />
    <Button android:id="@+id/four" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="4"
        android:textSize="80dp" />
    <Button android:id="@+id/five" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="5"
        android:textSize="80dp" />
    <Button android:id="@+id/six" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="6"
        android:textSize="80dp" />
    <Button android:id="@+id/seven" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="7"
        android:textSize="80dp" />
    <Button android:id="@+id/eight" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="8"
        android:textSize="80dp" />
    <Button android:id="@+id/nine" android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill" android:text="9"
        android:textSize="80dp" />
    <TextView android:id="@+id/dialogue"
        android:layout_columnSpan="3"
        android:textSize="20dp" />
</GridLayout>